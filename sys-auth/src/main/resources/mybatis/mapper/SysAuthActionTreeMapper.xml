    <!--
     <if test="list != null"> 因为外部传入的为List类型，这里写list
     mybatis会对参数进行map化，即便为"list:你的list数据"
   -->
    <select id="findListByPostids" resultType="java.util.Map">
        SELECT saat.id, saat.action_id, saat.name, saat.parent_id, saa.url, saat.params, saa.permission, saat.icon, saat.children_num
        FROM sys_auth_actiontree saat LEFT JOIN sys_auth_action saa ON saa.id = saat.action_id

        LEFT JOIN ( SELECT sap.action_id, GROUP_CONCAT(sap.post_id) as post_ids FROM sys_auth_postaction sap GROUP BY sap.action_id) e
        ON e.action_id = saat.action_id

        <where>
            saat.parent_id = 'NONE'
            <if test="list != null">
                <foreach collection="list" item="post">
                    OR FIND_IN_SET(#{post}, e.post_ids )
                </foreach>
            </if>
        </where>

